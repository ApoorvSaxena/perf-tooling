<div class="fuzzy">
  <form method="get">
    <label class="fuzzy--label" for="fuzzzzzzzzzy">
      <svg class="fuzzy--icon">
        <use xlink:href="#icon-magnifier" />
      </svg>
      <input type="search" name="q" id="fuzzzzzzzzzy" class="fuzzy--input" title="Search inside of the list" placeholder="Search all <%= list.length %> <%= type %>" value="<%= query %>" autocomplete="off">
    </label>
  </form>
</div>
